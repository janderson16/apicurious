            <div class="col-md-10">
                <div class="card ">
                    <div class="header">
                        <h4 class="title">My Recent Activity</h4>
                    </div>
                    <div class="content">
                        <div class="table-full-width">
                            <table class="table">
                                <tbody>
                                  <tr>
                                    <th>Event Type</th>
                                    <th>Repo Name</th>
                                    <th>Author</th>
                                    <th>Commit Info</th>
                                  </tr>
                                  <% @events.each do |event| %>
                                    <tr>
																				<td><%= event.type %></td>
                                        <td><%= event.repo[:name] %></td>
                                        <td><%= event.actor[:login] %></td>
                                        <td><%= event.type == "PushEvent" ?
																				event.payload[:commits][0][:message] : event.payload[:issue][:title] %>
																			</td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
